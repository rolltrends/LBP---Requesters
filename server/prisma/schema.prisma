generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Requester {
  id          Int    @id @default(autoincrement())
  requester_id String @unique
  name        String
  first_name  String
  last_name   String
  phone_num   String
  mobile      String
  email_id    String @unique
  employee_id String
  job_title   String
  description String
}

model AuditTrail {
  id         Int      @id @default(autoincrement())
  user       String
  action     String
  module     String
  createdAt  DateTime @default(now())
}
